{
  "name": "intelligent-document-system-tests",
  "version": "1.0.0",
  "description": "Comprehensive testing suite for Intelligent Document System",
  "main": "systemTestRunner.ts",
  "scripts": {
    "test:unit": "jest --testMatch=\"**/*.test.ts\" --verbose",
    "test:integration": "jest --testMatch=\"**/*.integration.test.ts\" --verbose --runInBand",
    "test:validation": "ts-node systemValidation.runner.ts",
    "test:system": "ts-node systemTestRunner.ts",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:validation && npm run test:system",
    "test:performance": "npm run test:system -- --performance-only",
    "test:security": "npm run test:system -- --security-only",
    "test:stress": "npm run test:system -- --stress-only",
    "health-check": "ts-node systemHealthCheck.js",
    "validate-system": "npm run test:validation",
    "benchmark": "npm run test:performance",
    "security-audit": "npm run test:security"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/setup.ts"],
    "testTimeout": 30000,
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "collectCoverageFrom": [
      "api/**/*.ts",
      "components/**/*.tsx",
      "views/**/*.tsx",
      "!**/*.d.ts",
      "!**/*.test.ts",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "dependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}