# ========================================
# NATACARE PM - PRODUCTION ENVIRONMENT
# ========================================
# Copy this file to .env.production and fill in the actual values
# NEVER commit .env.production to version control!

# ========================================
# FIREBASE CONFIGURATION (REQUIRED)
# ========================================
VITE_FIREBASE_API_KEY=your_production_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789012
VITE_FIREBASE_APP_ID=1:123456789012:web:abcdef123456
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# ========================================
# GEMINI AI (REQUIRED for AI features)
# ========================================
VITE_GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# ========================================
# MONITORING & ANALYTICS (RECOMMENDED)
# ========================================

# Sentry Error Tracking
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
VITE_SENTRY_ENABLED=true
VITE_SENTRY_ENVIRONMENT=production
VITE_SENTRY_TRACE_SAMPLE_RATE=0.2
VITE_SENTRY_REPLAY_SAMPLE_RATE=0.1

# Google Analytics 4
VITE_GA4_MEASUREMENT_ID=G-XXXXXXXXXX
VITE_GA4_ENABLED=true

# ========================================
# SECURITY & FEATURE FLAGS (RECOMMENDED)
# ========================================

# Debug & Logging
VITE_ENABLE_DEBUG=false
VITE_ENABLE_CONSOLE_LOGS=false
VITE_LOG_LEVEL=error

# Security
VITE_ENABLE_2FA=true
VITE_SESSION_TIMEOUT_MINUTES=30
VITE_MAX_LOGIN_ATTEMPTS=5

# Rate Limiting
VITE_API_RATE_LIMIT_PER_MINUTE=100
VITE_FILE_UPLOAD_MAX_SIZE_MB=10

# ========================================
# THIRD-PARTY INTEGRATIONS (OPTIONAL)
# ========================================

# Email Service (SendGrid)
VITE_SENDGRID_API_KEY=your_sendgrid_api_key
VITE_SENDGRID_FROM_EMAIL=noreply@yourcompany.com

# SMS Service (Twilio) - Optional
VITE_TWILIO_ACCOUNT_SID=your_twilio_account_sid
VITE_TWILIO_AUTH_TOKEN=your_twilio_auth_token
VITE_TWILIO_PHONE_NUMBER=+1234567890

# Webhook URL for notifications
VITE_WEBHOOK_URL=https://your-webhook-endpoint.com/notify

# ========================================
# PERFORMANCE & CACHING (OPTIONAL)
# ========================================
VITE_ENABLE_SERVICE_WORKER=true
VITE_CACHE_DURATION_MINUTES=5
VITE_ENABLE_OFFLINE_MODE=true

# ========================================
# APP CONFIGURATION
# ========================================
VITE_APP_NAME=NataCarePM
VITE_APP_VERSION=1.0.0
VITE_APP_URL=https://app.yourcompany.com
VITE_API_BASE_URL=https://api.yourcompany.com

# ========================================
# VALIDATION NOTES
# ========================================
# All VITE_FIREBASE_* variables are REQUIRED
# VITE_GEMINI_API_KEY is REQUIRED for AI features
# VITE_SENTRY_DSN is HIGHLY RECOMMENDED for production
# Other variables are optional but recommended for full functionality
