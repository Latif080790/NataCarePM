rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============================================
    // TEMPORARY RELAXED RULES FOR LOGIN TESTING
    // ============================================
    // IMPORTANT: These rules are MORE PERMISSIVE than production
    // Use ONLY for 15 minutes of testing, then restore production rules
    // ============================================
    
    // Helper function - check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // ============================================
    // ERROR LOGS - ALLOW UNAUTHENTICATED WRITES
    // This allows app to log errors even before login
    // ============================================
    match /errorLogs/{logId} {
      // TEMPORARY: Allow anyone to write error logs
      // This fixes the "insufficient permissions" error
      allow create: if true;
      
      // Only authenticated users can read logs
      allow read: if isAuthenticated();
      
      // No updates or deletes allowed
      allow update, delete: if false;
    }
    
    // ============================================
    // USERS COLLECTION - ALLOW READ FOR LOGIN
    // ============================================
    match /users/{userId} {
      // TEMPORARY: Allow anyone to read user profiles for login
      // Production should restrict this to authenticated users only
      allow read: if true;
      
      // Users can update their own profile
      allow update: if isAuthenticated() && request.auth.uid == userId;
      
      // No creates or deletes
      allow create, delete: if false;
    }
    
    // ============================================
    // PROJECTS - AUTHENTICATED ONLY
    // ============================================
    match /projects/{projectId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // ============================================
    // ALL OTHER COLLECTIONS - AUTHENTICATED ONLY
    // ============================================
    match /{document=**} {
      allow read, write: if isAuthenticated();
    }
  }
}
